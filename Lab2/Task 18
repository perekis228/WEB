<?php
function ten($num1, $num2)
{
    if($num1+$num2>10): return true;
    else: return false;
    endif;
}

function equal($num1, $num2)
{
    if($num1==$num2): return true;
    else: return false;
    endif;
}

$test = 0;
if ($test == 0) echo 'верно'."\n";

$age = 29;
if($age<10 or $age>99)
{
    echo "Число меньше 10 или больше 99";
}
else
{
    $sum = $age%10 + ($age/10)%10;
    if($sum<=9): echo "Сумма цифр однозначна";
    else: echo "Сумма цифр двузначна";
    endif;
}
?>
